input x : Int

output a := x.offset(by: -1).defaults(to: 0) 
                + b.offset(by: -1).defaults(to: 0) 
                + c.offset(by: -1).defaults(to: 0) 
output b := a.offset(by: -3).defaults(to: 0) 
            + x.offset(by: -2).defaults(to: 0)   
output c := x + a + b
output d @1kHz := c.hold(or: 0)