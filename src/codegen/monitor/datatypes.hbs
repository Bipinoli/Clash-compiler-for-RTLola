
{{#each input_types~}}
    type HasInput{{@index}} = ({{this}}, Bool)
{{/each}}
{{#if (gt (len input_types) 1)~}}
    type Inputs = ({{#each input_types}}HasInput{{@index}}{{#unless @last}}, {{/unless}}{{/each}})
{{else~}}
    type Inputs = HasInput0
{{/if}}

{{#each output_types~}}
    type HasOutput{{@index}} = ({{this}}, Bool)
{{/each}}
{{#if (gt (len output_types) 1)~}}
    type Outputs = ({{#each output_types}}HasOutput{{@index}}{{#unless @last}}, {{/unless}}{{/each}})
{{else~}}
    type Outputs = HasOutput0
{{/if~}}

{{~#*inline "joined_pacings"~}}
    {{~#each output_types~}}
        Bool{{#unless @last}}, {{/unless}}
    {{~/each~}}
{{~/inline~}}

{{#*inline "pacing_tuples"}}
    {{~#if (gt (len output_types) 1)~}}
        ({{>joined_pacings}})
    {{~else~}}
        Bool
    {{~/if~}}
{{~/inline}}

type Pacings = {{>pacing_tuples}}
{{#if has_sliding_window}}
type Slides = {{slide_types}}
{{/if}}

{{#if has_sliding_window}}
type Event = (Inputs, Slides, Pacings)
{{else}}
type Event = (Inputs, Pacings)
{{/if}}

{{#*inline "joined_default_inputs"}}
    {{~#each input_defaults~}}
        ({{this}}, False){{#unless @last}}, {{/unless}}
    {{~/each~}}
{{~/inline}}

{{~#*inline "default_inputs"~}}
    {{~#if (gt (len input_defaults) 1)~}}
        ({{~>joined_default_inputs~}})
    {{~else~}}
        {{~>joined_default_inputs~}}
{{~/if~}}
{{~/inline~}}

{{#*inline "joined_default_pacings"}}
    {{~#each output_types~}}
        False{{#unless @last}}, {{/unless}}
    {{~/each~}}
{{~/inline}}

{{~#*inline "default_pacings"~}}
    {{~#if (gt (len output_types) 1)~}}
        ({{~>joined_default_pacings~}})
    {{~else~}}
        {{~>joined_default_pacings~}}
{{~/if~}}
{{~/inline~}}

{{#*inline "joined_default_pacings"}}
    {{~#each output_types~}}
        False{{#unless @last}}, {{/unless}}
    {{~/each~}}
{{~/inline}}

{{~#*inline "default_pacings"~}}
    {{~#if (gt (len output_types) 1)~}}
        ({{~>joined_default_pacings~}})
    {{~else~}}
        {{~>joined_default_pacings~}}
{{~/if~}}
{{~/inline~}}

